<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit image</h1>
        <div class="col-6 offset-3">
            <form action="/images/<%=image._id%>?_method=PUT" method="POST" class='validated-form' novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Image Title</label>
                    <input class="form-control" type="text" name="image[title]" id="title" value="<%= image.title %>"
                        required>
                    <div class="valid-feedback">
                        Valid input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="property">Property of</label>
                    <input class="form-control" type="text" name="image[property]" id="property"
                        value="<%= image.property %>" required>
                    <div class="valid-feedback">
                        Valid input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <input class="form-control" type="text" size="30" name="image[description]" id="description"
                        value="<%= image.description %>" required>
                    <div class="valid-feedback">
                        Valid input
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edit Image</button>
                </div>
            </form>
            <a href="/images">All images</a>
        </div>
    </div>