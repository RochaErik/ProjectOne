<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit movie</h1>
        <div class="col-6 offset-3">
            <form action="/movies/<%=movie._id%>?_method=PUT" method="POST" class='validated-form' novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Movie Title</label>
                    <input class="form-control" type="text" name="movie[title]" id="title" value="<%= movie.title %>"
                        required>
                    <div class="valid-feedback">
                        Valid input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="release">Release Date</label>
                    <input class="form-control" type="month" name="movie[release]" id="release"
                        value="<%= movie.release %>" required>
                    <div class="valid-feedback">
                        Valid input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="genre">Movie Genre</label>
                    <input class="form-control" type="text" name="movie[genre]" id="genre" value="<%= movie.genre %>"
                        required>
                    <div class="valid-feedback">
                        Valid input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="director">Director's Name</label>
                    <input class="form-control" type="text" name="movie[director]" id="director"
                        value="<%= movie.director %>" required>
                    <div class="valid-feedback">
                        Valid input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="runtime">Runtime</label>
                    <input class="form-control" type="text" name="movie[runtime]" id="runtime"
                        value="<%= movie.runtime %>" required>
                    <div class="valid-feedback">
                        Valid input
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edit Movie</button>
                </div>
            </form>
            <a href="/movies">All movies</a>
        </div>
    </div>