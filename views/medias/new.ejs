<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New image</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <form action="/images" method="POST" class='validated-form' enctype="multipart/form-data"
                        novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="title">Image Title</label>
                            <input class="form-control" type="text" name="image[title]" id="title" required>
                            <div class="valid-feedback">
                                Valid input
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="property">Property of</label>
                            <input class="form-control" type="text" name="image[property]" id="property" required>
                            <div class="valid-feedback">
                                Valid input
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <input class="form-control" type="text" size="30" name="image[description]" id="description"
                                required>
                            <div class="valid-feedback">
                                Valid input
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="mb-3">
                                <label for="image" class="form-label">Upload image(s)</label>
                                <input class="form-control" type="file" id="image" name="image" multiple>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">Add Image</button>
                        </div>
                    </form>
                    <a href="/images">All images</a>
                </div>
            </div>
        </div>
    </div>